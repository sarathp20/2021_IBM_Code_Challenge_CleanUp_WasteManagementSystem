<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fff"
    android:layout_marginTop="40dp"
    android:orientation="vertical"
    tools:context=".WorkerListActivity"
    >

    <LinearLayout
        android:background="@drawable/border"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/schedule"
        android:orientation="vertical">
        <TextView
            android:id="@+id/test1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:background="#333231"
            android:text="Scheduled to Akathethara"
            android:padding="7dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tap1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:text="Tap to View"
            android:padding="5dp"
            android:textColor="#333231"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/border"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/test2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="#333231"
            android:text="Scheduled to Malampuzha"
            android:textAlignment="center"
            android:padding="7dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tap2"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:text="Scheduled to Nenmmara"
            android:padding="7dp"
            android:textColor="#333231"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/test3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="#333231"
            android:text="Request from Nenmara"
            android:padding="7dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tap3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:text="Tap to View"
            android:padding="7dp"
            android:textColor="#333231"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>